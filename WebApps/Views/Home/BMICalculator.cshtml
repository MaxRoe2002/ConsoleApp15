@model ConsoleAppProject.App02.BMI
@{
    ViewData["Title"] = "BMICalculator";
}
<header class="jumbatron">
<h1>BMICalculator</h1>
 <h2>by Max Roe</h2>
    <p>
        This app will use your weight and height to calculate your body mass index.
    </p>
</header>
<section>
    <form method="post">

        <h2>Height</h2>
        <p>
            Enter your current height 
            either using metric or imperial units.
        </p>
        <p>
            <input type="number" placeholder="Feet"
                   value="6" asp-for="@Model.Feet" />

            <input type="number" placeholder="Inches"
                   value="0" asp-for="@Model.Inches" />
        </p>
        <p>
            <input type="number" placeholder="Centimetres"
                   asp-for="@Model.Centimetres" />
        </p>

        <h2>Weight</h2>
        <p>
            Please enter your weight using
            metric or imperial units.
        </p>
        <p>
            <input type="number" placeholder="Stones"
                   value="11" asp-for="@Model.Stones" />

            <input type="number" placeholder="Pounds"
                   value="5" asp-for="@Model.Pounds" />
        </p>
        <p>
            <input type="number" placeholder="Kilograms" asp-for="@Model.Kilograms" />
        </p>
        <p>
            <button class="btn btn-success" type="submit">Calculate</button>
        </p>
    </form>
</section>